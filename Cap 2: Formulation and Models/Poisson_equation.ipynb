   ],
   "source": [
    "# Verificación de la solución analítica\n",
    "x, y = sp.symbols('x, y')\n",
    "\n",
    "f_sp = 2*sp.pi**2 * sp.sin(sp.pi*x)*sp.sin(sp.pi*y)\n",
    "u_sp = sp.sin(sp.pi*x)*sp.sin(sp.pi*y)\n",
    "\n",
    "Poisson_eq = sp.diff(u_sp, x, 2) + sp.diff(u_sp, y, 2) + f_sp\n",
    "print(Poisson_eq.simplify())\n",
    "\n",
    "del x, y "
   ]
